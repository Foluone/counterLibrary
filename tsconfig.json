      "my-angular-counter": [
        "dist/my-angular-counter/my-angular-counter",
        "dist/my-angular-counter"
      ]
    },
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"]
  }
}